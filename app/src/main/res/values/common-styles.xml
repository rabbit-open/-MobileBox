<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--水平线-->
    <style name="line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px1</item>
        <item name="android:background">@color/line_color</item>
    </style>
    <!--水平间隔-->
    <style name="line_item_horizontal">
        <item name="android:background">@color/bg_page</item>
        <item name="android:layout_height">@dimen/common_item_margin_px</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <!--列表样式-->
    <style name="pull_refresh_list_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>
    <!--垂直线-->
    <style name="line_vertical">
        <item name="android:layout_width">@dimen/px1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_color</item>
    </style>
    <!--图片显示样式-->
    <style name="frescoSquareStyle">
        <item name="failureImage">@drawable/place_holder</item>
        <item name="failureImageScaleType">centerCrop</item>
        <item name="placeholderImage">@drawable/place_holder</item>
        <item name="placeholderImageScaleType">centerCrop</item>
    </style>
    <style name="frescoLoadingStyle">
        <item name="retryImage">@drawable/icon_retry</item>
        <item name="retryImageScaleType">centerCrop</item>
        <item name="failureImage">@drawable/icon_failure</item>
        <item name="failureImageScaleType">centerInside</item>
        <item name="placeholderImage">@drawable/place_holder</item>
        <item name="placeholderImageScaleType">centerCrop</item>
        <item name="progressBarImage">@drawable/icon_progress_bar</item>
        <item name="progressBarImageScaleType">centerInside</item>
        <item name="progressBarAutoRotateInterval">2000</item>
        <item name="fadeDuration">500</item>
        <item name="backgroundImage">@drawable/place_holder</item>
    </style>
    <!--头像显示样式-->
    <style name="frescoHeaderStyle">
        <item name="failureImage">@drawable/place_holder</item>
        <item name="failureImageScaleType">centerCrop</item>
        <item name="placeholderImage">@drawable/place_holder</item>
        <item name="placeholderImageScaleType">centerCrop</item>
        <item name="roundAsCircle">true</item>
    </style>
    <style name="cardViewStyle">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/px20</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">0dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardElevation">@dimen/px10</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<com.supets.pet.theme.statsbar.TranslucentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/StatusBarFullScreenNoBarStyle">

    <com.supets.pet.theme.statsbar.StatusBarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.hualala.ui.widget.CommonHeader
            android:id="@+id/commonHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rightText="设备搜索"
            app:rightTextColor="@color/app_color" />

        <com.hualala.ui.widget.viewpager.NoAnimationViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px120"
        android:background="@color/bg_page"
        app:elevation="0dp"
        app:tabBackground="@null"
        app:tabGravity="fill"
        app:tabIndicatorHeight="0dp"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabPaddingEnd="0dp"
        app:tabPaddingStart="0dp"
        app:tabRippleColor="@color/bg_page" />
</com.supets.pet.theme.statsbar.TranslucentLinearLayout>